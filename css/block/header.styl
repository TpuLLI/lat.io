.header

  &__top-line
    width: 80%
    margin: 0 auto
    padding-top: 20px
    overflow: hidden

  &__logo
    float: left

  &__menu
    margin-top: 17px
    float: right

    @media screen and (max-width 720px)
      width: 100%

  &__title
    color: #fff
    text-align: center
    margin-top: 150px

    &_medium
      margin: 20px 0 20px 0
      color: #242424

  &__link
    margin: 0 auto
    padding: 13px 40px
    max-width: 180px
    min-width: 150px
